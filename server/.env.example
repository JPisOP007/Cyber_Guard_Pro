NODE_ENV=development
PORT=5000

# Client URL for CORS and cookies
CLIENT_URL=http://localhost:3000

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/cyberguard

# JWT configuration
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRE=30d

# Redis (optional; used by Bull queues if enabled)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Third-party API keys (optional features)
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=
HIBP_API_KEY=

# Mailer (required for welcome email)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-or-smtp-pass
MAIL_PROVIDER=gmail # or 'smtp'
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
